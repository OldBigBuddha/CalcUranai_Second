<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionbarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionbarStyle" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/gradation</item>
    </style>
    
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/editTextNormal</item>
        <item name="android:textColor">@color/editTextText</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/editTextHint</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14dp</item>
    </style>
    
    <style name="EditTextError">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
